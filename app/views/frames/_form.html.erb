<%= simple_form_for([@place, @frame], :validate => true, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :number do %>
    <%= f.input_field :number %>
    <%= link_to t('links.frames.build_number'), build_number_place_frames_path(@place), :remote => true, :class => 'btn btn-warning' %>
  <% end %>
  <%= f.input :image, :as => :file %>
  <%= f.input :image_cache, :as => :hidden %>
  <%= f.input :body, :as => :text %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>